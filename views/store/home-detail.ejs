    <link rel="stylesheet" href="/general.css">
    </head>
  <body>
    <%- include('../partials/header') %>
    <h2 style="text-align:center;font-family:Arial;">
        You are in home-detail page
    </h2>
    <div>
        <div class="sub-list">
          <div>
          <strong>Name :</strong> <%= home.homeName %> 
