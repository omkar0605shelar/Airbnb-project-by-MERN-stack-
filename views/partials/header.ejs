<header>
  <link rel="stylesheet" href="/header.css">

  <nav>
    <ul>
      <!-- Left section: Brand -->
      <li class="brand">
        <a href="/">Airbnb</a>
      </li>

      <!-- Right section: Menu items -->
      <div class="nav-links">
        <% if (isLoggedIn) { %>
          <li><a href="/store/home-list" class="links">Home List</a></li>
          <li><a href="/store/bookings" class="links">Bookings</a></li>
          <li><a href="/store/favourite-list" class="links">Favourite List</a></li>
          <li><a href="/host/add-home" class="links">Add Home</a></li>
          <li><a href="/host/host-home-list" class="links">Host Homes</a></li>
        <% } %>

        <li class="auth-btn">
          <% if (!isLoggedIn) { %>
            <a href="/login" class="login-btn">Login</a>
          <% } else { %>
            <form action="/logout" method="POST">
              <button type="submit" class="logout-btn">Logout</button>
            </form>
          <% } %>
        </li>
      </div>
    </ul>
  </nav>
</header>
